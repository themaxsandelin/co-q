<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Co-Q - The ultimate music app for your event.</title>

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,600,700" rel="stylesheet">

    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/main.css">

    <script>window._sharedData={};</script>
  </head>
  <body>
    <section class="main">
        {{#if user}}

          <article class="wrapper">
            <header>
              <a href="/">
                <h2>Co-Q</h2>
              </a>

              <div class="user-area">
                <div class="info">
                  <p>{{#if user.name }}{{ user.name }}{{ else }}{{ user.username }}{{/if}}</p>
                  <a href="/logout">Log out</a>
                </div>
                <div class="avatar" style="background: url({{#if user.avatar}}{{ user.avatar }}{{ else }}/img/default.jpg{{/if}}) no-repeat center; background-size: cover;"></div>
              </div>
            </header>

        {{/if}}

        {{{ body }}}

        {{#if user}}
          </article>
        {{/if}}
    </section>

    {{#each scripts as |script i|}}
    <script src="/js/{{ script }}.js"></script>
    {{/each}}
  </body>
</html>
